<!DOCTYPE html>
<html ng-app="DashboardApp">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"> 
		<meta name="viewport" content="width=device-width, initial-scale=1.0"> 
		<title ng-bind="helloAngular">Dashboard</title>
		@Styles.Render("~/Content/admin/css")
        <script src="/Scripts/admin/modernizr.custom.js"></script>
	</head>
	<body ng-controller="dashboardController">
		<div class="container">	
			<!-- Codrops top bar -->
			<div class="codrops-top clearfix">
				<a href="http://1.bp.blogspot.com/-RYP0Df6wgyE/T9dTpMIEzFI/AAAAAAAAC50/g-ZaYfumQ90/s1600/Sasha-Grey+04.jpg"><strong>Dla dzieci</strong></a>
				<span class="right"><a href="@Url.Action("Index", "Home")"><strong>Powrot do strony</strong></a></span>
			</div><!--/ Codrops top bar -->
			<header class="clearfix">
				<h1>Panel admina<span>Zarzadzanie systemem</span></h1>	
			</header>
			<div class="main">

				<ul id="rb-grid" class="rb-grid clearfix">
					<li class="icon-clima-2 rb-span-2" ng-click="nextQuestion()">
						<h3>Użytkownicy</h3><span class="rb-temp">Zarzadzaj użytkownikami systemu</span>
						<div class="rb-overlay" style="background: blue;">
							<span class="rb-close">close</span>
                            <form>
                                <label for="login">Login</label>
                                <input type="text" name="login"/>
                                <input type="submit" />
                                
                                <ul>
                                    <li><a href="#">User</a></li>
                                </ul>
                            </form>
                            <span>{{title}}</span>
						</div>
					</li>
					<li class="icon-clima-1">
						<h3>Przedmioty</h3><span class="rb-temp">Zarządzaj i dodawaj nowe przedmioty</span>
						<div class="rb-overlay" style="background: blue;">
							<span class="rb-close">close</span>
						</div>
					</li>
					<li class="icon-clima-4">
						<h3>Menu nawigacyjne</h3><span class="rb-temp">Dostosuj górne menu</span>
						<div class="rb-overlay" style="background: blue;">
							<span class="rb-close">close</span>
						</div>
					</li>
                    <li class="icon-clima-1 rb-span-4">
						<h3>Strony</h3><span class="rb-temp">Modyfikuj i dodawaj nowe strony</span>
						<div class="rb-overlay" style="background: blue;">
							<span class="rb-close">close</span>
						</div>
					</li>
				</ul>
				
			</div>
		</div><!-- /container -->

<div id="bodyContainer" >
    <section id="content">
        <div class="container" >
            <div class="row">
                <div class="flip-container text-center col-md-12" ng-init="nextQuestion()">
                    <div class="back" ng-class="{flip: answered, correct: correctAnswer, incorrect:!correctAnswer}">
                        <p class="lead">{{answer()}}</p>
                        <p>
                            <button class="btn btn-info btn-lg next option" ng-click="nextQuestion()" ng-disabled="working">Next Question</button>
                        </p>
                    </div>
                    <div class="front" ng-class="{flip: answered}">
                        <p class="lead">{{title}}</p>
                        <div class="row text-center">
                            <button class="btn btn-info btn-lg option" ng-repeat="option in options" ng-click="sendAnswer(option)" ng-disabled="working">{{option.title}}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
	        
         @Scripts.Render("~/bundles/jquery")
         @Scripts.Render("~/bundles/admin")
		<script>
		    $(function () {
		        Boxgrid.init();
		    });
		</script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.7/angular.min.js"></script>
        <script src="/Scripts/app/dashboardController.js"></script>
        @*<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.7/angular.min.js"></script>*@
	</body>
</html>




