@model UniversityWebsite.Model.SubjectVm
@{
    Layout = null;
}

@{
    string newsString = GetPhrase("news");
    string scheduleString = GetPhrase("schedule");
    string syllabusString = GetPhrase("syllabus");
    string filesString = GetPhrase("files");
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .accordion .accordion-navigation {
            margin-bottom: 20px !important;
        }
    </style>
}

<h2>@Model.Name</h2>

<div class="large-12 columns">
    <div class="row">
        <div class="medium-5 columns">
            <h3>@Model.Name</h3>
        </div>
        <div class="medium-7 columns right">
            <ul class="inline-list">
                <li><a>@newsString</a></li>
                <li><a>@scheduleString</a></li>
                <li><a>@syllabusString</a></li>
                <li><a>@filesString</a></li>
            </ul>
        </div>

    </div>
    <ul class="accordion" data-accordion style="margin-left: 0">

        <li class="accordion-navigation">
            <a href="#panel1a">@newsString</a>
            <div id="panel1a" class="content active">
                @Model.News
            </div>
        </li>
        <li class="accordion-navigation">
            <a href="#panel2a">@scheduleString</a>
            <div id="panel2a" class="content active">
                @Model.Schedule
            </div>
        </li>
        <li class="accordion-navigation">
            <a href="#panel3a">@syllabusString</a>
            <div id="panel3a" class="content active">
                @Model.Syllabus
            </div>
        </li>
        <li class="accordion-navigation">
            <a href="#panel4a">@filesString</a>
            <div id="panel4a" class="content active">
                Panel 3. Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
            </div>
        </li>
    </ul>
</div>

