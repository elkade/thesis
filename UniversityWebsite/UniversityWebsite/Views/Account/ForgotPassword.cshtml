@model UniversityWebsite.Model.ForgotPasswordViewModel
@{
    var emailString = GetPhrase("email");
    var emailLinkString = GetPhrase("emailLink");
    ViewBag.Title = GetPhrase("forgotYourPassword");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center row">
    <p class="title" data-section-title><a href="#">@ViewBag.Title</a></p>
    <div class="content" data-section-content>
        <p>
            <div class="row">
                <div class="large-12 columns">
                    <div class="signup-panel">
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="row collapse">
                                <div class="small-12 columns">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @emailString })
                                </div>
                            </div>
                            <input type="submit" class="button" value="@emailLinkString" />
                        }
                    </div>
                </div>
            </div>
        </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
