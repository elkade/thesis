<!DOCTYPE html>
@{
    var lang = ViewBag.Language ?? "pl";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-color: red;
        }
    </style>
</head>
<body>
    @{
        Html.RenderAction("MainMenu","Layout",new {lang=lang});
    }
    <div>
        @RenderBody()
    </div>
</body>
</html>
